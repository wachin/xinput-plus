<component type="desktop-application">
  <!-- Use an RDNS-style, globally unique ID (do NOT use the .desktop filename here) -->
  <id>io.github.wachin.xinputplus</id>

  <name>xinput-plus</name>
  <summary>Adjust pointer speed per device (Xorg) via xinput</summary>

  <metadata_license>GPL-3.0-or-later</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <developer_name>Washington Indacochea Delgado</developer_name>
  <url type="homepage">https://github.com/wachin/xinput-plus</url>

  <description>
    <p>
      xinput-plus provides a simple PyQt6 GUI to manage per-device pointer acceleration
      on Xorg, with per-ID/name profiles, whitelisting, natural scrolling, tap-to-click,
      and a CTM fallback when “libinput Accel Speed” is not available.
    </p>
  </description>

  <!-- Keep this: it links the appstream component to your installed desktop file -->
  <launchable type="desktop-id">xinput-plus.desktop</launchable>

  <provides>
    <binary>xinput-plus</binary>
  </provides>

  <categories>
    <category>Utility</category>
    <category>Settings</category>
  </categories>

